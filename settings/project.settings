def filter_libs(libs)
  libs = libs.select do |file|
    /x86/ !~ file &&
      /netstandard/ !~ file &&
      /SQLite/ !~ file &&
      /netcore/ !~ file &&
      /amd64/ !~ file &&
      /net35/ !~ file &&
      /net40-client/ !~ file &&
      /portable/ !~ file &&
      /sl4/ !~ file &&
      /sl5/ !~ file &&
      /Interop/ !~ file &&
      /content/ !~ file &&
      /Machine.Fakes.Adap/ !~ file &&
      /Oracle/ !~ file &&
      /mono/i !~ file &&
      /android/i !~ file &&
      /System\./i !~ file &&
      /Moq/i !~ file
  end

  libs
end

